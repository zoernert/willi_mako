{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "lib": ["ES2018"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "allowJs": true,
    "noEmitOnError": false,
    "baseUrl": "./",
    "paths": {
      "../lib/*": ["./lib/*"],
      "../../lib/*": ["./lib/*"]
    }
  },
  "include": [
    "server.ts",
    "config/**/*",
    "middleware/**/*",
    "routes/**/*",
    "services/**/*",
    "types/**/*",
    "utils/**/*",
    "modules/**/*",
    "presentation/**/*",
    "repositories/**/*",
    "../lib/**/*"
  ],
  "exclude": [
    "pages/**/*",
    "components/**/*",
    "routes/archived/**/*",
    "services/processService_old.ts",
    "node_modules",
    "dist"
  ]
}
