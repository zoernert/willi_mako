{
  "name": "stromhaltig",
  "version": "1.0.0",
  "description": "Stromhaltig - Digital Energy Infrastructure for tomorrow",
  "main": "dist/server.js",
  "scripts": {
    "dev": "./start-dev.sh",
    "dev:limited": "./start-dev-limited.sh",
    "dev:next-only": "next dev -p 3003",
    "dev:backend-only": "PORT=3009 nodemon --exec \"npx tsx src/server.ts\"",
    "dev:backend-no-watch": "PORT=3009 npx tsx src/server.ts",
    "server:dev": "PORT=3009 nodemon --exec \"npx tsx src/server.ts\"",
    "server:start": "PORT=3009 npx tsx src/server.ts",
    "client:dev": "cd app-legacy && npm start",
    "build:backend": "npx tsc --project tsconfig.backend.json",
    "build:legacy": "cd app-legacy && npm run build",
    "build:next": "next build",
    "build": "npm run build:backend && npm run build:legacy && npm run move:legacy && npm run build:next",
    "move:legacy": "rm -rf public/app && mv app-legacy/build public/app",
    "start": "NODE_ENV=production node server.js",
    "install:all": "npm install && cd app-legacy && npm install",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --config jest.integration.config.js",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:all": "npm run test:coverage && npm run test:integration && npm run test:e2e",
    "test:seo": "lighthouse --output json --output html",
    "lint": "eslint src/ --ext .ts,.js",
    "lint:fix": "eslint src/ --ext .ts,.js --fix",
    "db:migrate": "psql -f db/migrations/$(ls db/migrations/ | tail -1)",
    "seed:m2c-roles": "npx tsx scripts/seed-m2c-roles.ts",
    "setup:m2c": "npm run db:migrate && npm run seed:m2c-roles",
    "type-check": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stromdao/stromhaltig.git"
  },
  "author": "STROMDAO GmbH",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/stromdao/stromhaltig/issues"
  },
  "homepage": "https://stromhaltig.de/",
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@google/generative-ai": "^0.15.0",
    "@mui/icons-material": "^7.2.0",
    "@mui/material": "^7.2.0",
    "@qdrant/js-client-rest": "^1.15.0",
    "@types/bcrypt": "^6.0.0",
    "@types/http-proxy-middleware": "^0.19.3",
    "@types/mongodb": "^4.0.6",
    "@types/nodemailer": "^6.4.17",
    "axios": "^1.10.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "critters": "^0.0.23",
    "csv-parser": "^3.2.0",
    "dotenv": "^17.2.0",
    "edifact": "^1.2.12",
    "express": "^4.18.2",
    "express-rate-limit": "^7.4.0",
    "express-validator": "^7.2.1",
    "helmet": "^7.1.0",
    "http-proxy-middleware": "^3.0.5",
    "jsonwebtoken": "^9.0.2",
    "langchain": "^0.2.10",
    "mammoth": "^1.9.1",
    "mongodb": "^6.18.0",
    "multer": "^1.4.5-lts.1",
    "next": "15.4.5",
    "nodemailer": "^7.0.5",
    "pdf-parse": "^1.1.1",
    "pg": "^8.11.3",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.40.0",
    "@tailwindcss/postcss": "^4.1.11",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-validator": "^2.20.33",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.19.9",
    "@types/pdf-parse": "^1.1.5",
    "@types/pg": "^8.11.6",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.8",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "eslint": "^9",
    "eslint-config-next": "15.4.5",
    "jest": "^29.7.0",
    "jest-extended": "^4.0.2",
    "nodemon": "^3.1.0",
    "supertest": "^6.3.3",
    "tailwindcss": "^4.0.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "typescript": "^5.5.0"
  }
}
