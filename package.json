{
  "name": "stromhaltig",
  "version": "1.0.0",
  "description": "Stromhaltig - Digital Energy Infrastructure for tomorrow",
  "main": "dist/server.js",
  "scripts": {
    "dev": "npm run build:client && npm run server:dev",
    "server:dev": "nodemon src/server.ts",
    "server:start": "ts-node src/server.ts",
    "client:dev": "cd client && npm start",
    "build:client": "cd client && npm run build",
    "build": "tsc && npm run build:client",
    "start": "node dist/server.js",
    "install:all": "npm install && cd client && npm install",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --config jest.integration.config.js",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:all": "npm run test:coverage && npm run test:integration && npm run test:e2e",
    "lint": "echo 'ESLint not configured yet'",
    "type-check": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stromdao/stromhaltig.git"
  },
  "author": "STROMDAO GmbH",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/stromdao/stromhaltig/issues"
  },
  "homepage": "https://stromhaltig.de/",
  "dependencies": {
    "@google/generative-ai": "^0.15.0",
    "@qdrant/js-client-rest": "^1.15.0",
    "axios": "^1.10.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "csv-parser": "^3.2.0",
    "dotenv": "^17.2.0",
    "edifact": "^1.2.12",
    "express": "^4.18.2",
    "express-rate-limit": "^7.4.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "langchain": "^0.2.10",
    "mammoth": "^1.9.1",
    "multer": "^1.4.5-lts.1",
    "pdf-parse": "^1.1.1",
    "pg": "^8.11.3",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.14.0",
    "@types/pdf-parse": "^1.1.5",
    "@types/pg": "^8.11.6",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.8",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "jest-extended": "^4.0.2",
    "nodemon": "^3.1.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.0"
  }
}
